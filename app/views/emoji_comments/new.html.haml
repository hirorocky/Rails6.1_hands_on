= link_to community_path(@community), class: 'btn btn-light mb-3' do
  %i.fas.fa-arrow-left
  戻る

.container
  %h1= t('.title', community_title: @community.title)
  = form_with model: @emoji, url: community_emoji_comments_path do |form|
    = form.label :author_name, class: 'form-label'
    = form.text_field :author_name, class: 'form-control mb-2'
    = form.label :emoji_type, class: 'form-label'
    = form.select :emoji_type, Emoji.emoji_types.keys.to_a, {}, class: 'form-control mb-4'
    = form.submit '投稿', class: 'btn btn-primary'
